---
import '../styles/globals.css';

export interface Props {
  title: string;
  lang?: string;
}

const { title, lang = 'en' } = Astro.props;

// Choose og:image based on language
const ogImage = lang === 'th' ? '/facebook_og_th.jpeg' : '/facebook_og.jpeg';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <!-- Suppress analytics blocking errors early -->
    <script is:inline>
      // Inline script to suppress analytics errors as early as possible
      (function () {
        if (typeof window !== 'undefined') {
          window.addEventListener(
            'error',
            function (event) {
              var target = event.target;
              if (target && target.tagName === 'SCRIPT' && target.src) {
                var blockedPatterns = [
                  'googletagmanager.com',
                  'google-analytics.com',
                  'gtag',
                ];
                var isBlocked = blockedPatterns.some(function (p) {
                  return target.src.indexOf(p) !== -1;
                });
                if (isBlocked) {
                  event.preventDefault();
                  event.stopPropagation();
                }
              }
            },
            true
          );
        }
      })();
    </script>

    <!-- Favicon and touch icons for various devices -->
    <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="shortcut icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />

    <!-- Open Graph meta tags for social sharing -->
    <meta property="og:title" content={title} />
    <meta property="og:type" content="website" />
    <meta property="og:image" content={ogImage} />
    <meta property="og:url" content={Astro.url} />
    <meta
      property="og:description"
      content="Child-friendly flashcard app for spaced repetition learning"
    />
    <meta property="og:site_name" content="Remember" />

    <!-- Twitter Card meta tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:image" content={ogImage} />
    <meta name="twitter:title" content={title} />
    <meta
      name="twitter:description"
      content="Child-friendly flashcard app for spaced repetition learning"
    />

    <!-- Google Fonts for consistent cross-platform display -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Kanit:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    overscroll-behavior: none;
    font-family:
      'Kanit',
      ui-rounded,
      'Hiragino Maru Gothic ProN',
      Manjari,
      -apple-system,
      BlinkMacSystemFont,
      sans-serif;
  }

  /* Ensure proper overflow handling for mobile */
  body {
    overflow-x: hidden;
    -webkit-overflow-scrolling: touch;
  }
</style>
